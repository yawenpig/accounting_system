<p id="notice"><%= notice %></p>

<h1>Accounting System</h1>

<% if user_signed_in? %>
<h2>Welcome to the acoounting system!</h2>
<% else %>
Please <%= link_to "Log in" , new_user_session_path %> to create an account!
<% end %>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Expense</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.title %></td>
        <td><%= account.expense %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Delete', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
<%= link_to 'Log Out' , destroy_user_session_path , method: 'delete' %>
